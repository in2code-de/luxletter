<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <main>
            <ROOT>
                <sheetTitle>LLL:EXT:luxletter/Resources/Private/Language/locallang_db.xlf:ctype.teaser.flexform</sheetTitle>

                <el>
                    <limit>
                        <label>LLL:EXT:luxletter/Resources/Private/Language/locallang_db.xlf:ctype.teaser.flexform.limit</label>
                        <config>
                            <type>input</type>
                            <size>40</size>
                            <max>9</max>
