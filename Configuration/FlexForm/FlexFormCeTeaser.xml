                            <eval>required</eval>
                        </config>
                    </buttontext>
                    <records>
                        <label>LLL:EXT:luxletter/Resources/Private/Language/locallang_db.xlf:ctype.teaser.flexform.records</label>
                        <config>
                            <type>group</type>
                            <internal_type>db</internal_type>
                            <allowed>tt_content</allowed>
                            <size>10</size>
                            <maxitems>10</maxitems>
                            <minitems>1</minitems>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </records>
                    <sectionmenu>
                        <exclude>1</exclude>
                        <label>LLL:EXT:luxletter/Resources/Private/Language/locallang_db.xlf:ctype.teaser.flexform.sectionmenu</label>
